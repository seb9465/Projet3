<Window x:Class="PolyPaint.Vues.Gallery"
         xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PolyPaint.Vues"
        mc:Ignorable="d"
        Title="Gallery" Height="720" Width="1280">
    <ScrollViewer>
        <StackPanel>
            <Button Style="{StaticResource MaterialDesignRaisedLightButton}" Click="GoBack_Click"
             Width="60" Height="40" HorizontalAlignment="Left" Background="Gainsboro" BorderBrush="Gray" Margin="0,0,0,0" >
                <materialDesign:PackIcon Kind="ArrowBack" Height="24" Width="24"/>
            </Button>
            <DockPanel HorizontalAlignment="Stretch" Margin="0,10,0,0">
                <Label Content="Polypaint Pro 1.0" FontSize="20" Margin="100,0,100,0"></Label>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Label Content="Welcome" FontSize="30" FontWeight="Bold" VerticalAlignment="Center"></Label>
                    <Label Name="usernameLabel" Foreground="OrangeRed" FontSize="30" VerticalAlignment="Center" FontWeight="Bold"></Label>
                </StackPanel>
                <Label BorderBrush="OrangeRed" BorderThickness="1" Height="250" Width="250" Margin="0,0,150,0" HorizontalAlignment="Right">aa</Label>
            </DockPanel>
            
            <ListBox Name="ImagePreviews" SelectionChanged="OnSelectionChanged" ItemsSource="{Binding}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <Label x:Name="name" Background="OrangeRed" Content="{Binding Name}" />
                            <Border BorderThickness="1" BorderBrush="OrangeRed">
                                <Image Source="{Binding ImagePreview}" Height="200" Width="250" Margin="5" />
                            </Border>
                            <Label x:Name="visibilityLabel" Background="OrangeRed" Content="{Binding CanvasVisibility}" />
                           
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel />
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
            </ListBox>
        </StackPanel>
    </ScrollViewer>
    
   
</Window>
