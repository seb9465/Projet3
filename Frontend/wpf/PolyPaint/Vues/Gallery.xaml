<Window x:Class="PolyPaint.Vues.Gallery"
         xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PolyPaint.Vues"
        mc:Ignorable="d"
        Title="Gallery" Height="720" Width="1280">
    <ScrollViewer>
        <StackPanel>
            <Button Style="{StaticResource MaterialDesignRaisedLightButton}" Click="GoBack_Click"
             Width="60" Height="40" HorizontalAlignment="Left" Background="Gainsboro" BorderBrush="Gray" Margin="0,0,0,0" >
                <materialDesign:PackIcon Kind="ArrowBack" Height="24" Width="24"/>
            </Button>
            <ListBox Name="ImagePreviews" SelectionChanged="OnSelectionChanged" ItemsSource="{Binding}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <Label x:Name="name" Background="LightGray" Content="{Binding Name}" />
                            <Border BorderThickness="1" BorderBrush="DarkGray">
                                <Image Source="{Binding ImagePreview}" Height="250" Width="250" Margin="5" />
                            </Border>
                            <Label x:Name="visibilityLabel" Background="LightGray" Content="{Binding CanvasVisibility}" />
                           
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel />
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
            </ListBox>
        </StackPanel>
    </ScrollViewer>
    
   
</Window>
