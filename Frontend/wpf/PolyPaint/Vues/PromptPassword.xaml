        xmlns:local="clr-namespace:PolyPaint.Vues"
        mc:Ignorable="d"
        Title="PolyPaint PRO" Height="152.076" Width="331.107">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="14,14,0,0" TextWrapping="Wrap" Text="This canvas is protected" VerticalAlignment="Top"/>
        <Label Content="Password: " HorizontalAlignment="Left" Margin="14,41,0,0" VerticalAlignment="Top"/>
        <PasswordBox Name="passwordTextBox" HorizontalAlignment="Left" Height="23" Margin="84,44,0,0" VerticalAlignment="Top" Width="220"/>
        <Button Content="OK" HorizontalAlignment="Left" Margin="249,76,0,0" VerticalAlignment="Top" Width="55" Click="Button_Click"/>
